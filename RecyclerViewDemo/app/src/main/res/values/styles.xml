<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Type faces -->
    <style name="TypeTC1">
        <item name="android:textSize">@dimen/textSizeTC1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TypeTC2">
        <item name="android:textSize">@dimen/textSizeTC2</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TypeTC3">
        <item name="android:textSize">@dimen/textSizeTC3</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TypeTC1.ListRowPrimary">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TypeTC1.ListRowPrimary.Light">
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="TypeTC2.ListRowSecondary">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
